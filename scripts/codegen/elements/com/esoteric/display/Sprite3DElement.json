{
	"desc": "The Sprite3D element is used to convert 2D elements to a 3D element.",
	
	"baseclass": "DisplayObject3DElement",

	"imports": [
		"flash.display.Sprite",
		"org.papervision3d.materials.MovieMaterial",
		"org.papervision3d.objects.primitives.Plane"
	],
	
	"properties": {
		"plane": {
			"type":	"Plane",
			"desc": "The plane object.",
			"doc": false
		},
		"sprite": {
			"type":	"Sprite",
			"default": "new Sprite()",
			"desc": "The Sprite object used for the material.",
			"doc": false
		},
		"movieMaterial": {
			"type":	"MovieMaterial",
			"desc": "The movie material.",
			"doc": false
		}
	},
	
	"objectProperties": {
		"alpha": {
			"object": "sprite",
			"property": "alpha",
			"type":	"Number",
			"default": "1.0",
			"desc": "Alpha value."
		},
		"smooth": {
			"object": "movieMaterial",
			"property": "smooth",
			"type":	"Boolean",
			"default": "true",
			"desc": "Whether to enable smoothing."
		},
		"interactive": {
			"object": "movieMaterial",
			"property": "interactive",
			"type":	"Boolean",
			"default": "true",
			"desc": "Whether the object is interactive."
		},
		"doubleSided": {
			"object": "movieMaterial",
			"property": "doubleSided",
			"type":	"Boolean",
			"default": "true",
			"desc": "Whether the object is double-sided."
		},
		"transparent": {
			"object": "movieMaterial",
			"property": "movieTransparent",
			"type":	"Boolean",
			"default": "true",
			"desc": "Whether the object is transparent."
		}
	}
	
}